// System Specs Animation
        document.addEventListener('DOMContentLoaded', function() {
            // Animate progress bars on scroll
            const progressBars = document.querySelectorAll('.performance-fill');
            
            function animateProgressBars() {
                progressBars.forEach(bar => {
                    const width = bar.style.width;
                    bar.style.width = '0';
                    
                    setTimeout(() => {
                        bar.style.transition = 'width 1.5s ease-in-out';
                        bar.style.width = width;
                    }, 200);
                });
            }
            
            // Intersection Observer for progress animation
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        animateProgressBars();
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.5 });
            
            // Observe the system specs section
            const systemSpecsSection = document.getElementById('system-specs');
            if (systemSpecsSection) {
                observer.observe(systemSpecsSection);
            }
            
            // Add hover effects to spec cards
            const specCards = document.querySelectorAll('.spec-card.pro-design');
            
            specCards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    card.style.transform = 'translateY(-8px)';
                });
                
                card.addEventListener('mouseleave', () => {
                    card.style.transform = 'translateY(0)';
                });
            });
        });


