        /* Advanced Liquid Glass CSS Variables */
        :root {
            /* Core Colors */
            --primary: #6C63FF;
            --primary-dark: #5548E0;
            --secondary: #00BFA6;
            --accent: #FF9F1C;
            --dark: #0F1115;
            --darker: #0A0B0F;
            --light: #FFFFFF;
            --gray: #8E8E93;
            
            /* Glass Effects - High Transparency like iOS */
            --glass-bg: rgba(255, 255, 255, 0.1);
            --glass-bg-light: rgba(255, 255, 255, 0.15);
            --glass-bg-dark: rgba(255, 255, 255, 0.05);
            --glass-border: rgba(255, 255, 255, 0.2);
            --glass-border-light: rgba(255, 255, 255, 0.3);
            --glass-border-dark: rgba(255, 255, 255, 0.1);
            
            /* Backdrop Filters - Strong blur like iOS */
            --glass-blur-strong: blur(40px) saturate(180%);
            --glass-blur-medium: blur(30px) saturate(160%);
            --glass-blur-light: blur(20px) saturate(140%);
            
            /* Shadows */
            --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
            --glass-shadow-hover: 0 16px 48px rgba(0, 0, 0, 0.3);
            --glass-shadow-strong: 0 24px 64px rgba(0, 0, 0, 0.4);
            
            /* Gradients */
            --gradient-primary: linear-gradient(135deg, var(--primary), var(--secondary));
            --gradient-accent: linear-gradient(135deg, var(--accent), var(--primary));
            --gradient-glass: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.1) 0%,
                rgba(255, 255, 255, 0.05) 50%,
                rgba(255, 255, 255, 0.1) 100%);
            
            /* Design Tokens */
            --radius-small: 12px;
            --radius-medium: 20px;
            --radius-large: 28px;
            --radius-round: 50px;
            
            --transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            --transition-slow: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
            --transition-fast: all 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }